{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SteamApi": {
    "BaseUrl": "https://api.steampowered.com",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "EnableLogging": false
  },
  "ApiKey": {
    "RequireApiKey": true,
    "HeaderName": "X-API-Key",
    "QueryParameterName": "api_key",
    "RateLimit": {
      "Enabled": true,
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000
    }
  }
}
