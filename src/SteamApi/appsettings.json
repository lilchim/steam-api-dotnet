{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SteamApi": {
    "BaseUrl": "https://api.steampowered.com",
    "StoreBaseUrl": "https://store.steampowered.com/api",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "EnableLogging": false
  },
  "ApiKey": {
    "RequireApiKey": true,
    "HeaderName": "X-API-Key",
    "QueryParameterName": "api_key",
    "RateLimit": {
      "Enabled": true,
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000
    }
  },
  "Cors": {
    "Enabled": false,
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://yourdomain.com"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "Content-Type",
      "X-API-Key",
      "Authorization"
    ],
    "AllowCredentials": false,
    "PreflightMaxAge": 86400
  }
}
